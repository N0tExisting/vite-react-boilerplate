{
	"root": true,
	"settings": {
		"mdx/code-blocks": true,
		"linkComponents": [
			// Components used as alternatives to <a> for linking, eg. <Link to={ url } />
			{
				"name": "Link",
				"linkAttribute": "to"
			},
			{
				"name": "NavLink",
				"linkAttribute": "to"
			},
			{
				"name": "A",
				"linkAttribute": "to"
			}
		]
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint",
		"jsx-a11y",
		"react",
		"react-hooks",
		"use-storeon",
		"mdx",
		"unicorn",
		"vest",
		"prettier"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:jsx-a11y/recommended",
		"plugin:react/recommended",
		"plugin:react/jsx-runtime",
		"plugin:react-hooks/recommended",
		"plugin:unicorn/recommended",
		"plugin:storybook/recommended",
		"plugin:mdx/recommended",
		"plugin:prettier/recommended",
		"prettier"
	],
	"rules": {
		"prettier/prettier": "warn",

		"vest/exclude-before-test": "error",
		"vest/hook-scope": "error",

		"use-storeon/no-dupe-use-storeon": "error",
		"use-storeon/no-unused-watched-vars": "error",
		"use-storeon/no-unwatched-vars": "error",

		"react/button-has-type": "warn",
		// prettier-ignore
		"react/no-multi-comp": ["warn", {
				"ignoreStateless": true
		}],
		"react/void-dom-elements-no-children": "error",
		// prettier-ignore
		"react/jsx-no-target-blank": ["error", {
				"allowReferrer": true,
				"enforceDynamicLinks": "always"
				//"warnOnSpreadAttributes": <warn>
		}],
		"react/jsx-no-script-url": "error",

		// prettier-ignore
		"unicorn/no-keyword-prefix": ["error", {
			"checkProperties": true,
			"onlyCamelCase": false
		}],
		"unicorn/no-unused-properties": "warn",
		"unicorn/no-unsafe-regex": "error",
		"unicorn/custom-error-definition": "error",
		// typescript handles this for us
		"unicorn/no-empty-file": "off",
		// prettier-ignore
		"unicorn/filename-case": ["warn", {
			"cases": {
				"pascalCase": true,
				"kebabCase": true
			}
		}],
		// prettier-ignore
		"unicorn/prevent-abbreviations": ["warn", {
			"replacements": {
				"props": false,
				"args": false
			}
		}],
		"unicorn/no-null": "off"
	},
	"overrides": [
		{
			// or whatever matches stories specified in .storybook/main.js
			"files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs|mdx)"],
			"rules": {
				"storybook/no-stories-of": "error"
			}
		}
	]
}
