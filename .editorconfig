# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,tsx,ts}]
indent_size = 2

[*.*sh]
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{mdx,md,markdown}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
